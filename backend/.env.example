AGORA_APP_CERTIFICATE="your-agora-app-certificate"
AGORA_TOKEN_TTL_SECONDS=1800

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Terms and Conditions
TERMS_URL="https://pnptv.app/terms"