# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PNPtv
NODE_ENV=development

# Database (PostgreSQL - Shared with Telegram Bot)
DATABASE_URL=postgresql://postgres:your_db_password@localhost:5432/pnptv_bot

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters

# Telegram WebApp
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=pnptv_bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Redis (Shared with Bot)
REDIS_URL=redis://localhost:6379

# Payment Providers
NEXT_PUBLIC_EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_P_CUST_ID=your_epayco_customer_id
EPAYCO_TEST_MODE=true

NEXT_PUBLIC_DAIMO_API_KEY=your_daimo_api_key
DAIMO_WEBHOOK_SECRET=your_daimo_webhook_secret

# Zoom Configuration
NEXT_PUBLIC_ZOOM_SDK_KEY=your_zoom_sdk_key
ZOOM_SDK_SECRET=your_zoom_sdk_secret
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# Agora (Live Streaming)
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# Radio Streaming
NEXT_PUBLIC_RADIO_STREAM_URL=https://your-radio-stream-url
NEXT_PUBLIC_RADIO_API_URL=https://your-radio-api

# Mistral AI (Cristina Assistant)
MISTRAL_API_KEY=your_mistral_api_key
NEXT_PUBLIC_MISTRAL_MODEL=mistral-medium

# Maps (Google Maps or Mapbox)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Admin Users (comma-separated user IDs)
ADMIN_USER_IDS=1,2,3

# Feature Flags
NEXT_PUBLIC_ENABLE_TIPPING=true
NEXT_PUBLIC_ENABLE_CREATOR_MONETIZATION=true
NEXT_PUBLIC_ENABLE_SCHEDULED_BROADCASTS=true

# Security
ENCRYPTION_KEY=your_encryption_key_32_chars_min
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
UPLOAD_DIR=./public/uploads

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
