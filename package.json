{
  "name": "pnptv-telegram-bot",
  "version": "1.0.0",
  "description": "Production-ready Telegram bot for PNPtv with full feature set",
  "main": "src/bot/core/bot.js",
  "scripts": {
    "start": "node src/bot/core/bot.js",
    "agent": "node scripts/agent-run.js",
    "dev": "nodemon src/bot/core/bot.js",
    "test": "npx jest --coverage",
    "test:unit": "jest --testMatch='**/unit/**/*.test.js' --coverage",
    "test:integration": "dotenv -e .env.example -- jest --testMatch='**/integration/**/*.test.js' --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:all": "npx jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "swagger": "node src/bot/api/swagger.js",
    "migrate": "node scripts/migrate.js",
    "migrate:users": "node scripts/migrate-existing-users.js",
    "check:subscriptions": "node scripts/check-user-subscriptions.js",
    "seed": "node scripts/seed.js",
    "validate:env": "node -e \"require('./src/utils/envValidator').validateEnv()\"",
    "import:legacy-customers": "node scripts/import-legacy-customers.js",
    "build:prime-hub": "cd webapps/prime-hub && npm install && npx vite build && cp -r dist/* ../../public/prime-hub/",
    "build:webapps": "npm run build:prime-hub",
    "prestart": ""
  },
  "keywords": [
    "telegram",
    "bot",
    "pnptv",
    "payments",
    "streaming"
  ],
  "author": "PNPtv Team",
  "license": "MIT",
  "dependencies": {
    "@daimo/pay": "^1.19.0",
    "@daimo/pay-common": "^1.19.0",
    "@noble/hashes": "^2.0.1",
    "@sentry/node": "^7.99.0",
    "agora-access-token": "^2.0.4",
    "agora-token": "^2.0.5",
    "axios": "^1.13.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "cron-parser": "^5.5.0",
    "crypto-js": "^4.2.0",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "dotenv-safe": "^9.1.0",
    "epayco-sdk-node": "^1.4.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "form-data": "^4.0.0",
    "geolib": "^3.3.4",
    "helmet": "^7.1.0",
    "i18next": "^23.7.16",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "lodash.debounce": "^4.0.8",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "node-geocoder": "^4.3.0",
    "nodemailer": "^7.0.11",
    "openai": "^4.24.7",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "puppeteer": "^24.37.2",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^5.0.0",
    "redis": "^4.6.12",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.33.2",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "telegraf": "^4.16.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "viem": "^2.22.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@types/jest": "^29.5.14",
    "axios-mock-adapter": "^2.1.0",
    "babel-jest": "^30.2.0",
    "chai": "^4.5.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "sinon": "^21.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
