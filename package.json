{
  "name": "pnptv-telegram-bot",
  "version": "1.0.0",
  "description": "Production-ready Telegram bot for PNPtv with full feature set",
  "main": "src/bot/core/bot.js",
  "scripts": {
    "start": "node src/bot/core/bot.js",
    "dev": "nodemon src/bot/core/bot.js",
    "test": "jest --coverage",
    "test:unit": "jest --testMatch='**/unit/**/*.test.js' --coverage",
    "test:integration": "jest --testMatch='**/integration/**/*.test.js' --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:all": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "swagger": "node src/bot/api/swagger.js",
    "migrate": "node scripts/migrate.js",
    "migrate:users": "node scripts/migrate-existing-users.js",
    "check:subscriptions": "node scripts/check-user-subscriptions.js",
    "seed": "node scripts/seed.js",
    "validate:env": "node -e \"require('./src/utils/envValidator').validateEnv()\"",
    "validate:indexes": "node scripts/validate-indexes.js",
    "prestart": "npm run validate:env"
  },
  "keywords": [
    "telegram",
    "bot",
    "pnptv",
    "payments",
    "streaming"
  ],
  "author": "PNPtv Team",
  "license": "MIT",
  "dependencies": {
    "@daimo/pay": "^1.19.0",
    "@daimo/pay-common": "^1.19.0",
    "@google-cloud/firestore": "^7.1.0",
    "@mistralai/mistralai": "^1.10.0",
    "@sentry/node": "^7.99.0",
    "agora-access-token": "^2.0.4",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "epayco-sdk-node": "^1.4.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "geolib": "^3.3.4",
    "helmet": "^7.1.0",
    "i18next": "^23.7.16",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-geocoder": "^4.3.0",
    "nodemailer": "^6.9.7",
    "openai": "^4.24.7",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^5.0.0",
    "redis": "^4.6.12",
    "sharp": "^0.33.2",
    "stripe": "^14.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "telegraf": "^4.16.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "viem": "^2.22.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zoomus": "^0.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
