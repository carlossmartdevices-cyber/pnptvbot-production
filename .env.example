# PNPtv Bot Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username
BOT_WEBHOOK_DOMAIN=https://yourdomain.com
BOT_WEBHOOK_PATH=/webhook/telegram
EPAYCO_WEBHOOK_PATH=/api/webhooks/epayco
DAIMO_WEBHOOK_PATH=/api/webhooks/daimo

# ============================================================
# ADMIN CONFIGURATION
# ============================================================
ADMIN_USER_IDS=your_telegram_user_id
ADMIN_ID=your_telegram_user_id
ADMIN_IDS=your_telegram_user_id

# ============================================================
# TELEGRAM CHANNELS & GROUPS
# ============================================================
PRIME_CHANNEL_ID=your_prime_channel_id
GROUP_ID=your_group_id

# ============================================================
# ENVIRONMENT & PORT
# ============================================================
NODE_ENV=production
PORT=3005

# ============================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=pnptvbot
POSTGRES_USER=pnptvbot
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_SSL=false
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=20

# ============================================================
# REDIS CONFIGURATION (Optional)
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=300

# ============================================================
# FIREBASE CONFIGURATION (Optional - for legacy features)
# ============================================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_DATABASE_URL=your_firebase_database_url

# ============================================================
# ERROR TRACKING (Sentry)
# ============================================================
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# ============================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================

# ePayco (PRODUCTION MODE)
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_P_CUST_ID=your_epayco_customer_id
EPAYCO_P_KEY=your_epayco_p_key
EPAYCO_TEST_MODE=false

# Daimo (PRODUCTION MODE)
DAIMO_API_KEY=your_daimo_api_key
DAIMO_APP_ID=your_daimo_app_id
DAIMO_TREASURY_ADDRESS=your_treasury_address
DAIMO_REFUND_ADDRESS=your_refund_address
DAIMO_WEBHOOK_SECRET=your_daimo_webhook_secret

# ============================================================
# AI ASSISTANT CONFIGURATION (Mistral)
# ============================================================
MISTRAL_API_KEY=your_mistral_api_key
MISTRAL_AGENT_ID=your_mistral_agent_id
MISTRAL_MODEL=mistral-small-latest
MISTRAL_MAX_TOKENS=500

# Grok (X.AI) - for broadcast/post text generation
GROK_API_KEY=your_grok_api_key
GROK_MODEL=grok-3

# ============================================================
# EMAIL CONFIGURATION
# ============================================================

# SendGrid (Optional)
#SENDGRID_API_KEY=

# SMTP Generic (Optional)
#SMTP_HOST=smtp.hostinger.com
#SMTP_PORT=587
#SMTP_USER=your_email@example.com
#SMTP_PASSWORD=your_email_password
#SMTP_SECURE=false
#EMAIL_FROM=noreply@example.com

# ============================================================
# LIVE STREAMING & RADIO (Agora)
# ============================================================
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
RADIO_STREAM_URL=https://yourdomain.com/radio/stream
RADIO_API_URL=https://yourdomain.com/api/radio

# ============================================================
# SECURITY & ENCRYPTION
# ============================================================
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ============================================================
# SESSION CONFIGURATION
# ============================================================
SESSION_TTL=86400

# ============================================================
# FILE UPLOAD
# ============================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
