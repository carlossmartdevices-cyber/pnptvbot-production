# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_from_botfather
BOT_USERNAME=your_bot_username

# Admin Configuration (comma-separated Telegram user IDs)
ADMIN_IDS=12345678,87654321

# Firebase/Firestore Configuration
FIREBASE_PROJECT_ID=pnptv--bot
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@pnptv--bot.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# Payment Gateways
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_TEST_MODE=true

DAIMO_PAY_API_KEY=your_daimo_pay_api_key
DAIMO_PAY_WEBHOOK_SECRET=your_webhook_secret

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Redis for rate limiting (if using external Redis)
REDIS_URL=redis://localhost:6379
