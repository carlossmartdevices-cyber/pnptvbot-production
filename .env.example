# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=pnptv_bot
BOT_WEBHOOK_DOMAIN=https://yourdomain.com
BOT_WEBHOOK_PATH=/pnp/webhook/telegram

# Environment
NODE_ENV=development
PORT=3000

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pnptv
DB_USER=pnptv_user
DB_PASSWORD=pnptv_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=300

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pnptv_bot
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Payment Providers
# CRITICAL: In production, EPAYCO_PRIVATE_KEY and DAIMO_WEBHOOK_SECRET are REQUIRED for webhook security
# If these are missing in production, webhook signature verification will fail
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_P_CUST_ID=your_epayco_customer_id
EPAYCO_TEST_MODE=true

DAIMO_API_KEY=your_daimo_api_key
# CRITICAL: Required for webhook signature verification in production
DAIMO_WEBHOOK_SECRET=your_daimo_webhook_secret

# Zoom Configuration
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
ZOOM_SDK_KEY=your_zoom_sdk_key
ZOOM_SDK_SECRET=your_zoom_sdk_secret

# Agora Configuration (for live streaming)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# Radio Streaming
RADIO_STREAM_URL=https://your-radio-stream-url
RADIO_API_URL=https://your-radio-api

# OpenAI Configuration (for AI chat)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500

# Admin Users (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789,987654321

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_32_chars_min

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Session Configuration
SESSION_TTL=86400

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Geolocation
GEOCODER_PROVIDER=google
GEOCODER_API_KEY=your_geocoding_api_key

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Cron Jobs
ENABLE_CRON=true
SUBSCRIPTION_CHECK_CRON=0 0 * * *
